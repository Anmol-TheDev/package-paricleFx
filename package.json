{
  "name": "package-particlefx",
  "private": false,
  "version": "1.3.0",
  "description": "A lightweight, framework-agnostic JavaScript library that renders interactive particle-based image hover effects using HTML5 canvas. Customize particle behavior with options like gravity, noise, mouse force, and more. Easily integrate into React, Vue, or plain HTML projects by passing a DOM container element.",
  "type": "module",
  "main": "./dist/package-particlefx.umd.js",
  "module": "./dist/package-particlefx.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && bun run types:build && tsc",
    "types:build": "tsc",
    "serve": "vite preview",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.0.6"
  },
  "keywords": [
    "canvas",
    "particles",
    "hover effect",
    "image to particles",
    "particle effect",
    "particle animation",
    "canvas animation",
    "interactive canvas",
    "html5 canvas",
    "framework-agnostic",
    "vanilla js",
    "image particles",
    "react particle canvas",
    "js particle hover",
    "visual effect",
    "creative coding",
    "web animation"
  ],
  "author": "Anmol Singh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Anmol-TheDev/package-particlefx.git"
  },
  "bugs": {
    "url": "https://github.com/Anmol-TheDev/package-particlefx/issues"
  },
  "homepage": "https://github.com/Anmol-TheDev/package-particlefx#readme",
  "engines": {
    "node": ">=12.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
